{
    "manifest_version": 2,
    "name": "BitVK",
    "version": "1.0",
    "default_locale": "ru",
    "description": "__MSG_chrome_extension_description__",
    "options_page": "options.html",
    "icons": {
        "128": "ico/128.png",
        "24": "ico/24.png"
    },
    "permissions": ["*://*.vk.me/*", "*://vk.com/*", "storage"],
    "content_scripts": [
        {
            "js": [ "vendor/zepto.js", "content.js" ],
            "css": ["content.css"],
            "matches": [ "*://vk.com/*" ]
        }
    ]
}